{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-std=c++11",
                "-Wall",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/movieTracker.cpp",

                "-o",
                "${workspaceFolder}/movieTracker.exe"
            ],
            "options": {
                "cwd": "C:/MinGW/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            
        }
    ],
    "version": "2.0.0"
}